FROM python:3.8-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir numpy==1.24.4 pandas==1.3.0 scikit-learn==1.0.2 joblib==1.0.1

# Copy dataset and training script
COPY water_potability.csv /app/
COPY train_model_in_docker.py /app/

# Train the model
CMD ["python", "train_model_in_docker.py"]
